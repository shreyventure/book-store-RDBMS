<link rel="stylesheet" href="/login.css" />
<div class="container">
  <div class="border-bottom">
    <h2 class="mt-4 olive">Account</h2>
  </div>

  <div class="flex">
    <div class="mt-4 p-4 text-right child brder">
      <h6 class="mb-4 lead font">NEW CUSTOMERS</h6>
      <br />
      <p class="lead">
        If you don't have an account, please proceed by clicking the following
        button to continue first-time registration.
      </p>
      <a href="/users/register" class="btn login-btn mt-4">Create an account</a>
    </div>
    <div class="mt-4 p-4 text-left child">
      <%- include('./partials/messages'); %>
      <h6 class="mb-4 lead font">MEMBERS</h6>
      <br />
      <p class="lead">Please log in to your account.</p>
      <form action="/users/login" method="POST">
        <div class="form-group w-60">
          <label for="email">Email</label>
          <input
            style="
              background: transparent;
              border: 1px solid grey;
              color: inherit;
            "
            type="text"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            required
          />
        </div>
        <div class="form-group w-60">
          <label for="password">Password</label>
          <input
            style="
              background: transparent;
              border: 1px solid grey;
              color: inherit;
            "
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            required
          />
        </div>
        <button type="submit" class="btn login-btn">Login</button>
      </form>
    </div>
  </div>
</div>
