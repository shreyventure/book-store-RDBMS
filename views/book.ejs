<!--product-->
<link rel="stylesheet" href="/book.css" />
<div class="container flex mt-4">
  <div id="one">
    <img style="height: 500px" src="<%= product.image %>" alt="Book" />
    <h5 class="mt-3"><%= product.name %></h5>
    <h5>Rs.<%= product.cost %>/-</h5>
    <form action="/charge/?amt=<%= product.cost*100 %>" method="POST">
      <script
        src="https://checkout.stripe.com/checkout.js"
        class="stripe-button"
        ,
        data-key="<%= key %>"
        ,
        data-locale="auto"
        ,
        data-description="Novel: The Best Of Me"
        ,
        data-amount="<%= product.cost*100 %>"
        ,
        data-currency="INR"
        ,
        data-image="<%= product.image %>"
      ></script>

      <script>
        document.getElementsByClassName("stripe-button-el")[0].style.display =
          "none";
      </script>
      <br />
      <% if(product.availability) {%>
      <button type="submit" class="btn btn-success">Purchase</button>
      <% } %>
    </form>
  </div>
  <div id="two">
    <h3 class="text-center mb-3 mt-4">About the book</h3>
    <%= desc %>
    <h4 class="mt-4" style="font-weight: bold">
      Available: <%= product.availability %>
    </h4>
  </div>
</div>
<script>
  document.getElementById("user").innerHTML = "Hello, <%=name%>";
</script>
