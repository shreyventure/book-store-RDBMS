<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://bootswatch.com/4/darkly/bootstrap.min.css"
    />
    <title>Book Store</title>
  </head>
  <body>
    <% if (add) {%>
    <div
      id="success"
      onload="fade_out"
      class="card card-body"
      style="display: flex; justify-content: space-between"
    >
      <div>
        <h4 style="color: rgb(80, 231, 80)">
          Product Added Successfully!
          <button
            class="btn btn-danger"
            style="width: 35px; height: 35px; float: right"
            onclick="setTimeout(function () {document.getElementById('success').style.display='none'}, 50); return false"
          >
            X
          </button>
        </h4>
      </div>
    </div>
    <%}%>
    <div class="row mt-5">
      <div class="col-md-6 m-auto">
        <div class="card card-body">
          <h1 class="text-center mb-3">Add a Product</h1>
          <form action="/products/add" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input
                style="background-color: whitesmoke"
                type="text"
                id="name"
                name="name"
                class="form-control"
                placeholder="Enter name of the book"
              />
            </div>
            <div class="form-group">
              <label for="availability">Availability</label>
              <input
                style="background-color: whitesmoke"
                type="number"
                id="availability"
                name="availability"
                class="form-control"
                placeholder="Enter a number"
              />
            </div>
            <div class="form-group">
              <label for="availability">Cost</label>
              <input
                style="background-color: whitesmoke"
                type="number"
                id="cost"
                name="cost"
                class="form-control"
                placeholder="Enter cost in Rupees"
              />
            </div>
            <div class="form-group">
              <label for="image">Image URL:</label>
              <input
                style="background-color: whitesmoke"
                type="text"
                id="image"
                name="image"
                class="form-control"
                placeholder="Enter URL"
              />
            </div>
            <div class="form-group">
              <label for="name">Description</label>
              <textarea
                style="background-color: whitesmoke"
                class="form-control"
                name="description"
                rows="5"
                placeholder="Enter description"
              ></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">
              Add Product
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
